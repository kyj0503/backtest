# Development Dockerfile for frontend
FROM node:18-alpine

# Install git for testing dependencies
RUN apk add --no-cache git

WORKDIR /app

# Install dependencies (cached at image build time)
COPY package.json ./
RUN npm install

# Copy rest of source (will be overridden by bind mount in dev)
COPY . .

ENV NODE_ENV=development

EXPOSE 5174

# Default command for development
CMD ["npm", "run", "dev"]
