# Nginx 리버스 프록시 설정 (예제)
# 사용법:
# 1. 이 파일을 /etc/nginx/sites-available/backtest 로 복사
# 2. server_name을 실제 도메인이나 IP로 수정
# 3. 심볼릭 링크 생성: sudo ln -s /etc/nginx/sites-available/backtest /etc/nginx/sites-enabled/
# 4. Nginx 재시작: sudo systemctl reload nginx

server {
    listen 80;
    server_name backtest.example.com;  # 실제 도메인이나 IP로 변경 필요

    # 프론트엔드 (React 앱)
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # 백엔드 API
    location /api/ {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CORS 헤더 (필요시)
        add_header Access-Control-Allow-Origin *;
        add_header Access-Control-Allow-Methods 'GET, POST, PUT, DELETE, OPTIONS';
        add_header Access-Control-Allow-Headers 'Content-Type, Authorization';
    }

    # Health check
    location /health {
        proxy_pass http://localhost:8000/health;
    }
}
